# Server Configuration
PORT=5000
NODE_ENV=development

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/testnotifier
DB_NAME=testnotifier

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-here
JWT_EXPIRE=7d
JWT_COOKIE_EXPIRE=7

# CORS Configuration
CLIENT_URL=http://localhost:5173
CLIENT_URL_PRODUCTION=https://testnotifier.com

# Stripe Configuration
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_stripe_webhook_secret

# Email Configuration (using Gmail as example)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=hello@testnotifier.co.uk
EMAIL_PASS=your-app-specific-password
EMAIL_FROM=hello@testnotifier.co.uk

# Twilio Configuration (for SMS/WhatsApp)
TWILIO_ACCOUNT_SID=AC_your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+447700900123
TWILIO_WHATSAPP_NUMBER=+14155238886

# Security Configuration
BCRYPT_ROUNDS=12
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Extension Configuration
EXTENSION_ID=your-chrome-extension-id
EXTENSION_UPDATE_URL=https://clients2.google.com/service/update2/crx

# Monitoring and Analytics
SENTRY_DSN=your-sentry-dsn-url
GOOGLE_ANALYTICS_ID=GA-your-google-analytics-id

# API Keys for External Services
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret