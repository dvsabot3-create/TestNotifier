# Production Environment Configuration
# Copy this to .env and fill in your actual values

# Server Configuration
PORT=5000
NODE_ENV=production

# Database Configuration (MongoDB Atlas recommended for production)
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/testnotifier?retryWrites=true&w=majority
DB_NAME=testnotifier

# JWT Configuration - Generate strong random keys
JWT_SECRET=your-super-secure-jwt-secret-key-min-32-characters-long
JWT_EXPIRE=7d
JWT_COOKIE_EXPIRE=7

# CORS Configuration
CLIENT_URL=https://testnotifier.com
CLIENT_URL_PRODUCTION=https://testnotifier.com

# Stripe Configuration (Get from Stripe Dashboard)
STRIPE_PUBLISHABLE_KEY=pk_live_your_stripe_publishable_key
STRIPE_SECRET_KEY=sk_live_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_stripe_webhook_secret

# Email Configuration (Use professional email service)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=hello@testnotifier.co.uk
EMAIL_PASS=your-app-specific-password
EMAIL_FROM=TestNotifier <hello@testnotifier.co.uk>

# Twilio Configuration (For SMS/WhatsApp)
TWILIO_ACCOUNT_SID=AC_your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+447700900123
TWILIO_WHATSAPP_NUMBER=+14155238886

# Security Configuration
BCRYPT_ROUNDS=12
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Extension Configuration
EXTENSION_ID=your-chrome-extension-id
EXTENSION_UPDATE_URL=https://clients2.google.com/service/update2/crx

# Monitoring and Analytics
SENTRY_DSN=https://your-sentry-dsn-url.ingest.sentry.io/project-id
GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX

# API Keys for External Services
GOOGLE_CLIENT_ID=your-google-oauth-client-id
GOOGLE_CLIENT_SECRET=your-google-oauth-client-secret

# Redis Configuration (for session management)
REDIS_URL=redis://localhost:6379

# File Upload Configuration
MAX_FILE_SIZE=5242880
UPLOAD_PATH=./uploads

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=./logs/app.log